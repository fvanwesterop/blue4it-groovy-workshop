<?xml version="1.0" ?>

<configuration debug="true" scan="true" scanPeriod="2 seconds">

  <appender name="console-full" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern type="type_a">%d{HH:mm:ss.SSS} [%logger{36}] %thread %caller{1}   %class{0}.%method\(\) at line%line: [%-5level - %msg]%n</pattern>
    </encoder>
  </appender>

  <appender name="console-simple" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern type="type_b">%d{HH:mm:ss.SSS} %level{5} %logger - %msg%n</pattern>
    </encoder>
  </appender>



  <logger name="nl.blue4it" level="debug" additivity="false">
    <appender-ref ref="console-simple"/>
  </logger>

  <logger name="org.eclipse.jetty" level="info" additivity="false">
    <appender-ref ref="console-simple"/>
  </logger>


  <root level="debug">
    <appender-ref ref="console-simple" />
  </root>

</configuration>